            </div>
            <div class="tel address-size">
                <p>Username</p>
                <p id="employeeDetUsername">michaeljohnson</p>
            </div>
        </div>

        <div class="row pt-3 px-4 mt-5">
            <div class="gap-2 d-md-flex justify-content-md-end buttons">
                <button onclick="employeeDetDelete()" class="btn me-md-2 delete button" type="button">Delete</button>
                <button onclick="employeeDetEdit()" class="btn btn-primary add-employee button px-4" type="button">Edit Details</button>
            </div>
        </div>
    
